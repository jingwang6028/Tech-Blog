<div class="container mt-5">
  <section class="login">
    <div class="d-flex align-items-center login-header">
      <h2>Edit Post</h2>
    </div>
    <form class="m-3" id="edit-form">
      <input type="hidden" name="post-id" value="{{blog.id}}" />
      <div class="mt-3 mb-3">
        <label for="post-title" class="form-label">Title</label>
        <input type="text" class="form-control" id="post-title" />

      </div>
      <div class="mb-3">
        <label for="post-content" class="form-label">Description</label>
        <input type="text" class="form-control" id="post-content" />
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-secondary mb-3">Updated Post</button>
        <button
          type="button"
          class="btn btn-secondary"
          id="delete-btn"
        >Delete</button>

      </div>

    </form>

  </section>
</div>
<script src="/js/edit.js"></script>