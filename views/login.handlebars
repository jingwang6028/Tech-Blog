<div class="container mt-5">
  <section class="login">
    <div class="d-flex align-items-center login-header">
      <h2>Login</h2>
    </div>
    <form class="m-3">
      <div class="mt-3 mb-3">
        <label for="exampleInputName1" class="form-label">Username</label>
        <input
          type=""
          class="form-control"
          id="exampleInputName1"
          aria-describedby="emailHelp"
        />

      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="exampleInputPassword1"
        />
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-secondary">Login!</button>
        <a href="/signup" style="text-decoration: none; margin-top: 10px;">Sign
          up instead</a>
      </div>

    </form>

  </section>
</div>
<script src="./js/login.js"></script>