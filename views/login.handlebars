<div class="container mt-5">
  <section class="login">
    <div class="d-flex align-items-center login-header">
      <h2>Login</h2>
    </div>
    <form class="m-3" id="login-form">
      <div class="mt-3 mb-3">
        <label for="user-login" class="form-label">Username</label>
        <input type="text" class="form-control" id="user-login" />

      </div>
      <div class="mb-3">
        <label for="login-password" class="form-label">Password</label>
        <input type="password" class="form-control" id="login-password" />
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-secondary">Login!</button>
        <a href="/signup" style="text-decoration: none; margin-top: 10px;">Sign
          up instead</a>
      </div>

    </form>

  </section>
</div>
<script src="/js/login.js"></script>