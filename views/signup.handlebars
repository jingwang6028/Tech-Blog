<div class="container mt-5">
  <section class="signup">
    <div class="d-flex align-items-center login-header">
      <h2>Sign Up</h2>
    </div>
    <form class="m-3" id="signup-form">
      <div class="mt-3 mb-3">
        <label for="user-signup" class="form-label">Username</label>
        <input type="text" class="form-control" id="user-signup" />

      </div>
      <div class="mb-3">
        <label for="password-signup" class="form-label">Password</label>
        <input type="password" class="form-control" id="password-signup" />
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-secondary">Sign Up!</button>
        <a href="/login" style="text-decoration: none; margin-top: 10px;">Login
          instead</a>
      </div>

    </form>

  </section>
</div>
<script src="/js/signup.js"></script>